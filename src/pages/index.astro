---
import Layout from "../layouts/Layout.astro";
const posts = Object.values(
	import.meta.glob("./blog/posts/*.md", { eager: true }),
) as Array<{ frontmatter: { title: string }; url: string }>;
---

<Layout>
	<h2>Latest Posts:</h2>
	{
		posts.map((post) => (
			<li>
				<a href={post.url}>{post.frontmatter.title}</a>
			</li>
		))
	}
</Layout>

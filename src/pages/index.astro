---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("blog", ({ data }) => {
	return data.draft !== true;
});
---

<Layout>
	<h2>Latest Posts:</h2>
	{
		posts.map((post) => (
			<li>
				<a href={`/blog/posts/${post.id}`}>{post.data.title}</a>
			</li>
		))
	}
</Layout>
